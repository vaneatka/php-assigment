{% if files %}

<table class="table">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">File Name</th>
        <th scope="col">Document Type</th>
        <th scope="col">Status</th>
        <th scope="col">Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for index , file in files %}

    <tr>
        <th scope="row">{{ index +1 }}</th>
        <td>{{ file.getFileName() }}</td>
        <td>{{ file.getDocumentType() }}</td>
        <td>{{ file.getStatus() }}</td>
        <td>
            <a href="{{ path('file', {id: file.getId()})}}" class="btn btn-primary">Show contents</a>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#raw-view">
                View Raw
            </button>
        </td>
    </tr>


    {% endfor %}


    </tbody>
</table>

{% endif %}








